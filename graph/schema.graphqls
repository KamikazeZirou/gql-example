# GraphQL schema example
#
# https://gqlgen.com/getting-started/

interface Node {
    id: ID!
}

type Todo implements Node {
    id: ID!
    text: String!
    done: Boolean!
    user: User!
}

type User {
    id: ID!
    name: String!
}

type Query {
    todos: [Todo!]!
    viewer: User!
    node(id: ID!): Node
}

input NewTodo {
    text: String!
    userId: String!
}

type Mutation {
    createTodo(input: NewTodo!): Todo!
}
